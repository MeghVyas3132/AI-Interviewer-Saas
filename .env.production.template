# ============================================
# AI INTERVIEWER - PRODUCTION ENVIRONMENT
# Copy to .env and fill in your values
# ============================================

# === DATABASE ===
POSTGRES_USER=ai_interviewer_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=ai_interviewer_db

# === SECURITY ===
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_256BIT_SECRET_KEY

# === CORS ===
# JSON array of allowed origins
CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]

# === AI SERVICE ===
AI_SERVICE_URL=http://ai-service:3000
AI_SERVICE_API_KEY=your_ai_service_api_key

# Google Gemini API Key (for ATS checker and AI features)
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here

# === EMAIL ===
# Options: sendgrid, ses, console
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=AI Interviewer

# For AWS SES (if using SES instead of SendGrid)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# === FRONTEND URLs ===
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api/v1
NEXT_PUBLIC_AI_SERVICE_URL=https://interview.yourdomain.com

# === ASSEMBLYAI (Speech-to-Text) ===
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# === OPTIONAL: MONITORING ===
# SENTRY_DSN=https://xxx@sentry.io/xxx
# DATADOG_API_KEY=your_datadog_key

# === RUNTIME SETTINGS ===
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
