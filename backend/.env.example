# Backend Configuration

# Database
DATABASE_URL=postgresql://ai_interviewer_user:ai_interviewer_password@localhost:5432/ai_interviewer_db

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
APP_NAME=AI Interviewer Platform
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# CORS (Backend only)
CORS_ORIGINS=["http://localhost:8000"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# Real-time AI Insights (Human-AI-Assisted Interviews)
# =============================================================================

# Internal API Key (for service-to-service communication)
INTERNAL_API_KEY=your-internal-api-key-change-in-production

# VideoSDK Credentials (https://videosdk.live)
VIDEOSDK_API_KEY=your-videosdk-api-key
VIDEOSDK_SECRET=your-videosdk-secret
VIDEOSDK_API_ENDPOINT=https://api.videosdk.live/v2

# ML Service URLs (Docker internal networking)
SPEECH_SERVICE_URL=http://speech-service:8001
VIDEO_SERVICE_URL=http://video-service:8002
FRAUD_SERVICE_URL=http://fraud-service:8003
NLP_SERVICE_URL=http://nlp-service:8004
INSIGHT_AGGREGATOR_URL=http://insight-aggregator:8005

# Deepgram API (Primary Speech-to-Text)
DEEPGRAM_API_KEY=your-deepgram-api-key

# Whisper Model (Fallback STT - runs locally)
WHISPER_MODEL_SIZE=base

# OpenAI API (for NLP resume contradiction detection)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Alternative: Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# LLM Provider: "openai" or "anthropic"
LLM_PROVIDER=openai
