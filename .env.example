# ==============================================
# AI INTERVIEWER - ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================
# Copy this to .env and fill in your values.
# Generate SECRET_KEY with: python3 -c 'import secrets; print(secrets.token_urlsafe(48))'
# Generate other keys with: python3 -c 'import secrets; print(secrets.token_urlsafe(32))'
# ==============================================

# ------------ DATABASE ------------
POSTGRES_USER=ai_interviewer_user
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
POSTGRES_DB=ai_interviewer_db
DATABASE_URL=postgresql://ai_interviewer_user:CHANGE_ME@postgres:5432/ai_interviewer_db

# ------------ REDIS ------------
REDIS_URL=redis://redis:6379/0

# ------------ JWT/AUTH (CRITICAL) ------------
SECRET_KEY=GENERATE_WITH_python3_-c_import_secrets_print_secrets.token_urlsafe_48
ALGORITHM=HS256

# ------------ ADMIN SECURITY ------------
ADMIN_DELETE_CODE=GENERATE_WITH_python3_-c_import_secrets_print_secrets.token_urlsafe_24

# ------------ SERVICE-TO-SERVICE AUTH (CRITICAL) ------------
INTERNAL_API_KEY=GENERATE_WITH_python3_-c_import_secrets_print_secrets.token_urlsafe_32
SYNC_API_KEY=GENERATE_WITH_python3_-c_import_secrets_print_secrets.token_urlsafe_32

# ------------ FRONTEND URL ------------
# For production, set to your actual frontend domain (e.g. https://app.yourdomain.com)
FRONTEND_URL=http://localhost:3000

# ------------ AI SERVICE Integration ------------
AI_SERVICE_URL=
AI_SERVICE_API_KEY=
AI_SERVICE_MODEL=

# ------------ Groq API ------------
GROQ_API_KEY=
GROQ_API_KEYS=

# ------------ Gemini API ------------
GEMINI_API_KEY=
GEMINI_API_KEYS=

# ------------ AssemblyAI ------------
ASSEMBLYAI_API_KEY=

# ------------ Google API ------------
GOOGLE_API_KEY=

# ------------ VideoSDK (if used) ------------
VIDEOSDK_API_KEY=
VIDEOSDK_SECRET=

# ------------ External APIs ---
DEEPGRAM_API_KEY=
OPENAI_API_KEY=
LLM_PROVIDER=openai
WHISPER_MODEL_SIZE=base

# ------------ CORS (override for production) ------------
# JSON array of allowed origins. Defaults are localhost:3000 + Railway URLs.
# CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]
